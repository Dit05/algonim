{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",

    "outDir": "./dist/temp-js/",
    "rootDir": "./src/",

    "moduleResolution": "bundler",
    "esModuleInterop": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true // Prevent M$ moments
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "build/*"
  ],
  "outDir": "./build",
  "files": ["src/Algonim.ts"]
}
